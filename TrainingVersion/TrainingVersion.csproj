    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Configuration" Version="2.1.1" />
      <PackageReference Include="NLog.Extensions.Logging" Version="5.1.0" />
    </ItemGroup>

</Project>
